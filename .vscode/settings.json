{
    "editor.rulers": [
        100 // Enforced by Prettier
    ],

    // We use the language service plugin for this
    "tslint.enable": false,

    // These settings should match the glob passed to Prettier's CLI.
    "[typescript]": {
        "editor.formatOnSave": true
    },
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.formatOnSave": true
    },
    "[jsonc]": {
        "editor.formatOnSave": true
    },
    "[markdown]": {
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.formatOnSave": true
    },

    "typescript.tsdk": "node_modules/typescript/lib"
}
